# App
APP_ENV={{ env }}
{% for key, value in wordpress_config.app.iteritems() %}
APP_{{ key|upper }}={{ value }}
{% endfor %}

# Database
{% for key, value in wordpress_config.db.iteritems() %}
DATABASE_{{ key|upper }}={{ value }}
{% endfor %}

# Wordpress
{% for key, value in wordpress_config.wp.iteritems() %}
WP_{{ key|upper }}={{ value }}
{% endfor %}

# Wordpress salts
{% for key, value in wordpress_config.salts.iteritems() %}
{{ key|upper }}='{{ value }}'
{% endfor %}

# Mail SMTP
{% for key, value in wordpress_config.mail.iteritems() %}
MAIL_{{ key|upper }}={{ value }}
{% endfor %}

{% if (wordpress_config.variables is defined) and wordpress_config.variables %}
# Variables
{% for key, value in wordpress_config.variables.iteritems() %}
{{ key|upper }}="{{ value }}"
{% endfor %}
{% endif %}
